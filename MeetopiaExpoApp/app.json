{
  "expo": {
    "name": "Meetopia",
    "slug": "meetopia-app",
    "version": "1.0.2",
    "orientation": "portrait",
    "icon": "./assets/adaptive-icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.meetopia.app",
      "buildNumber": "3",
      "infoPlist": {
        "NSCameraUsageDescription": "Meetopia needs camera access to enable video calls and connections with other users.",
        "NSMicrophoneUsageDescription": "Meetopia needs microphone access to enable voice communication during video calls.",
        "NSLocalNetworkUsageDescription": "Meetopia uses local network to provide the best video call experience."
      },
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "package": "com.meetopia.app",
      "versionCode": 1,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.INTERNET"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "37e69074-d079-4c60-a3c4-5d468645bcf1"
      }
    },
    "privacy": {
      "privacyPolicyUrl": "https://meeetopia.vercel.app/privacy"
    },
    "category": "SOCIAL_NETWORKING",
    "contentRights": {
      "containsThirdPartyContent": false,
      "usesAppleSignIn": false
    },
    "pricing": "FREE"
  }
}

{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "noEmit": false,
    "jsx": "react",
    "esModuleInterop": true,
    "target": "ES2022",
    "sourceMap": true,
    "allowJs": true,
    "checkJs": false
  },
  "include": ["server/**/*.ts"],
  "exclude": ["node_modules"]
} 